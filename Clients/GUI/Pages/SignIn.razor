    {
        if (true) { } else { } //Взаимодействие с UserService(Переход на нужную страницу, отправка данных)
    }

    private SignInData userInput;

    //public User user { get; set; }
    protected override void OnInitialized()
    {
        userInput = new SignInData();
    }
}
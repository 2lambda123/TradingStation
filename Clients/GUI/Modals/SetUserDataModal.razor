<div class="simple-form">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="input-group-text" value="@user.Name" />
    </div>
    <div class="form-group">
        <label for="Surname">Surname:</label>
        <input type="text" class="input-group-text" value="@user.Surname" />
    </div>
    <div class="form-group">
        <label for="Birthday">Birthday:</label>
        <input type="date" class="input-group-text" value="@user.DateOfBirth" />
